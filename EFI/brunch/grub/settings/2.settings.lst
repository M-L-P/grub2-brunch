###############################################################################
#                                [settings.lst]
#                         to list items of settings
###############################################################################
theme_menu
#==============================================================================
#####----{conditions}----
#------------------------------------------------------------------------------
if [ "on" == "${USB_MOUSE}" ];then
	set USB=(USB)
else
	set USB=
fi
#------------------------------------------------------------------------------
if [ "on" == "${PS2_MOUSE}" ];then
	set PS2=(PS2)
else
	set PS2=
fi
#==============================================================================
default=${SELECTED}
#==============================================================================
#####----{back}----
#------------------------------------------------------------------------------
menuentry "${MENU_BACK}" --class "echo/back" --hotkey "esc" {
	set SELECTED=settings
	configfile ${prefix}/menu.lst
}
#==============================================================================

#==============================================================================
#####----{items}----
#------------------------------------------------------------------------------
grub_fm
#------------------------------------------------------------------------------
menuentry "${MENU_TIMEOUT}${TIME_OUT}" --class "settings/hourglass" --id "timeout" {configfile ${SET}/2-1.timeout.lst}
#------------------------------------------------------------------------------
menuentry "${MENU_LANG}" --class "settings/lang" --id "lang" {configfile ${SET}/2-2.lang.lst}
#------------------------------------------------------------------------------
submenu "${MENU_MOUSE}${USB}${PS2}" --class "settings/mouse" --id "mouse" {source ${SET}/2-5.mouse.lst}
#==============================================================================
global_environment