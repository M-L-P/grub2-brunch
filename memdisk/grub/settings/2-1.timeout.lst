###############################################################################
#                                 [timeout.lst]
#                           to list items of timeout
###############################################################################

#==============================================================================
#####----{function}----
#------------------------------------------------------------------------------
function ini_timeout {
	ini_get --set=TO3 ${SET}/timeout.ini ${TIME_OUT}:秒3
	ini_get --set=TO5 ${SET}/timeout.ini ${TIME_OUT}:秒5
	ini_get --set=TO7 ${SET}/timeout.ini ${TIME_OUT}:秒7
	ini_get --set=TO10 ${SET}/timeout.ini ${TIME_OUT}:秒10
	ini_get --set=TO15 ${SET}/timeout.ini ${TIME_OUT}:秒15
	ini_get --set=TO20 ${SET}/timeout.ini ${TIME_OUT}:秒20
}
#------------------------------------------------------------------------------
function save_timeout {
	save_env --file=${cmdpath}/grubenv TIME_OUT
	ini_timeout
	export TIME_OUT TO3 TO5 TO7 TO10 TO15 TO20
	configfile ${SET}/2-1.timeout.lst
}
#==============================================================================
default="'${TIME_OUT}'"
#==============================================================================
#####----{back}----
#------------------------------------------------------------------------------
menuentry "${MENU_BACK}" --class "echo/back" --hotkey "esc" {
	set SELECTED=timeout
	configfile ${SET}/2.settings.lst
}
#==============================================================================
ini_timeout
#==============================================================================
#####----{items}----
#------------------------------------------------------------------------------
menuentry "${TO3}  3" --class "timeout/3" --id "'3'" {
	set TIME_OUT=3
	save_timeout
}
#------------------------------------------------------------------------------
menuentry "${TO5}  5" --class "timeout/5" --id "'5'" {
	set TIME_OUT=5
	save_timeout
}
#------------------------------------------------------------------------------
menuentry "${TO7}  7" --class "timeout/7" --id "'7'" {
	set TIME_OUT=7
	save_timeout
}
#------------------------------------------------------------------------------
menuentry "${TO10} 10" --class "timeout/10" --id "'10'" {
	set TIME_OUT=10
	save_timeout
}
#------------------------------------------------------------------------------
menuentry "${TO15} 15" --class "timeout/15" --id "'15'" {
	set TIME_OUT=15
	save_timeout
}
#------------------------------------------------------------------------------
menuentry "${TO20} 20" --class "timeout/20" --id "'20'" {
	set TIME_OUT=20
	save_timeout
}
#==============================================================================

#==============================================================================
#####----{back}----
#------------------------------------------------------------------------------
menuentry "${MENU_BACK}" --class "echo/back" --hotkey "esc" {
	set SELECTED=timeout
	configfile ${SET}/2.settings.lst
}
#==============================================================================
global_environment