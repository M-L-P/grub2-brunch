###############################################################################
#                                 [lang.lst]
#                         to list items of languages
###############################################################################

#==============================================================================
#####----{function}----
#------------------------------------------------------------------------------
function ini_lang {
	ini_get --set=LANG1 ${SET}/lang.ini ${lang}:语1
	ini_get --set=LANG2 ${SET}/lang.ini ${lang}:语2
	ini_get --set=LANG3 ${SET}/lang.ini ${lang}:语3
}
#------------------------------------------------------------------------------
function save_lang {
	save_env --file=${cmdpath}/grubenv lang
	ini_lang
	export lang LANG1 LANG2 LANG3
	refresh_lang
	configfile ${SET}/2-2.lang.lst
}
#==============================================================================
if [ -n "${lang}" ]; then
	default=${lang}
else
	default=Eng
fi
#==============================================================================
#####----{back}----
#------------------------------------------------------------------------------
menuentry "${MENU_BACK}" --class "echo/back" --id "back" --hotkey "esc" {
	set SELECTED=lang
	configfile ${SET}/2.settings.lst
}
#==============================================================================
ini_lang
#==============================================================================
#####----{items}----
#------------------------------------------------------------------------------
menuentry "${LANG1} English" --class "lang/Eng" --id "Eng" {
	set lang=
	save_lang
}
#------------------------------------------------------------------------------
menuentry "${LANG2} 简体中文" --class "lang/简" --id "zh_CN" {
	set lang=zh_CN
	save_lang
}
#------------------------------------------------------------------------------
menuentry "${LANG3} 繁體中文" --class "lang/繁" --id "zh_TW" {
	set lang=zh_TW
	save_lang
}
#==============================================================================
global_environment